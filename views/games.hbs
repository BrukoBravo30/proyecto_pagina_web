<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blader - Juegos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Estilo para el campo de búsqueda con solo borde inferior */
        .input-group .form-control {
            border: none;
            border-bottom: 2px solid #007bff; /* Cambia el color si es necesario */
            border-radius: 0;
        }

        /* Estilo para el botón de reinicio */
        .btn-reset {
            border: none;
            background-color: transparent;
            color: #007bff;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-reset:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="bg-dark text-light">

<div class="container mt-5">

    <!-- Mini-nav solo en la página de juegos -->
    <div class="mini-nav mb-4">
        <form action="/games" method="GET" class="d-flex justify-content-between align-items-center">
            <!-- Selector de género -->
            <div class="me-2">
                <select name="genero" class="form-select" aria-label="Seleccionar género">
                    <option value="">Filtrar por género</option>
                    {{#each generos}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Barra de búsqueda -->
            <div class="input-group">
                <input type="text" name="busqueda" class="form-control" placeholder="Buscar título..." aria-label="Buscar título">
                <!-- Icono de búsqueda -->
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>

            <!-- Botón para reiniciar filtros -->
            <button type="reset" class="btn-reset ms-2" onclick="window.location='/games';">
                Reiniciar filtros
            </button>
        </form>
    </div>

    <div class="row">
        {{#each juegos}}
            <div class="col-md-4 mb-4">
                <div class="card bg-dark text-light">
                    <img src="{{this.imagen}}" class="card-img-top" alt="{{this.titulo}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.titulo}}</h5>
                        <p class="card-text">{{this.descripcion}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
